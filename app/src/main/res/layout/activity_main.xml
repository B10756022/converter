<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical">



    <Button
        android:id="@+id/btn_bmi"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMI轉換器"
        android:background="@drawable/bg_btn"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/btn_shoe_man"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="男鞋碼轉換器"
        android:layout_below="@+id/btn_bmi"
        android:background="@drawable/bg_btn"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_shoe_woman"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="女鞋碼轉換器"
        android:layout_below="@+id/btn_shoe_man"
        android:background="@drawable/bg_btn"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_time"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="時間轉換器"
        android:layout_below="@+id/btn_shoe_woman"
        android:background="@drawable/bg_btn"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_temperature"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="溫度轉換器"
        android:layout_below="@+id/btn_time"
        android:background="@drawable/bg_btn"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_money"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="貨幣轉換器"
        android:layout_below="@+id/btn_temperature"
        android:background="@drawable/bg_btn"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />

</RelativeLayout>